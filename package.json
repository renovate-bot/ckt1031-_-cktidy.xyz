{
  "private": true,
  "name": "cktidy.xyz",
  "version": "0.0.0",
  "description": "A personal website showcasing information about me and my articles!",
  "license": "MIT",
  "author": "ckt1031",
  "scripts": {
    "build": "next build && next-sitemap",
    "commit": "cz",
    "dev": "next dev -p 4072",
    "format": "prettier . -w",
    "preinstall": "npx only-allow pnpm",
    "lint": "tsc && eslint --fix .",
    "prepare": "husky install",
    "start": "next start"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@next/env": "13.2.1",
    "@next/font": "13.2.1",
    "@sentry/nextjs": "7.38.0",
    "@tabler/icons-react": "2.5.0",
    "@wits/next-themes": "0.2.16",
    "clsx": "1.2.1",
    "contentlayer": "0.3.0",
    "cssnano": "5.1.15",
    "csstype": "3.1.1",
    "dayjs": "1.11.7",
    "esbuild": "0.17.10",
    "feed": "4.2.2",
    "fuse.js": "6.6.2",
    "is-ci": "3.0.1",
    "next": "13.2.1",
    "next-contentlayer": "0.3.0",
    "next-sitemap": "3.1.52",
    "nextjs-routes": "1.0.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "17.4.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-code-titles": "1.2.0",
    "rehype-external-img-size": "0.1.0",
    "rehype-external-links": "2.0.1",
    "rehype-slug": "5.1.0",
    "remark-gfm": "3.0.1",
    "remark-normalize-headings": "3.0.1",
    "remark-parse": "10.0.1",
    "remark-unwrap-images": "3.0.1",
    "s-ago": "2.2.0"
  },
  "devDependencies": {
    "@ckt1031/eslint-config": "0.1.2",
    "@ckt1031/prettier-config": "0.1.2",
    "@ckt1031/tsconfig": "0.1.2",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@tailwindcss/typography": "0.5.9",
    "@types/is-ci": "3.0.0",
    "@types/node": "18.14.1",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.13",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.34.0",
    "eslint-config-next": "13.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "postcss": "8.4.21",
    "prettier": "2.8.4",
    "tailwindcss": "3.2.7",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@ckt1031/eslint-config/typescript-strict"
    ],
    "ignorePatterns": [
      "types/nextjs-routes.d.ts",
      "next-env.d.ts",
      ".contentlayer"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "project": "./tsconfig.json"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{yml,cjs,mjs,js,jsx,ts,tsx,json,css,html,md}": [
      "prettier -c"
    ]
  },
  "packageManager": "pnpm@7.27.1",
  "prettier": "@ckt1031/prettier-config"
}
